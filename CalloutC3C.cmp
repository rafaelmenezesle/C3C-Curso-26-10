<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" 
                Controller="CalloutC3CController">
    
    <aura:attribute name="request" type="String" />
    <aura:attribute name="response" type="String" />
    
    <lightning:card>
        <aura:set attribute="title">
            <span class="slds-text-heading_large">Callout C3C</span>
        </aura:set>
        <div class="slds-form-element__control">
            <div class="slds-m-around_x-small">
                <lightning:textarea name="input3" value="{!v.request}" 
                                    placeholder="Insira o request aqui..."
                                    label="Request:"/>
                
                <lightning:button variant="brand" label="Realizar callout" title="Realizar callout" 
                                  onclick="{!c.doCallout}" />
            </div>
        </div>
        
        <div class="slds-m-around_x-small">
            <lightning:textarea name="input4" readonly="true" 
                                value="{!v.response}" label="Response:"/>
        </div>
        
    </lightning:card>
	
</aura:component>
